---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: portainer-ingress
spec:
  ingressClassName: public
  rules:
    - host: localhost
      http:
        paths:
        - path: /
          pathType: Prefix
          backend:
            service:
              name: portainer
              port:
                number: {{portainer_external_port}}
